#include <stdio.h>
int main() {
    int h, m, s;
    printf("Ingrese hora en formato 24h (HH MM SS): ");
    scanf("%d %d %d", &h, &m, &s);
    
    char periodo[3];
    int hora12 = h;
    
    if (h >= 12) {
        strcpy(periodo, "PM");
        if (h > 12) hora12 = h - 12;
    } else {
        strcpy(periodo, "AM");
        if (h == 0) hora12 = 12;
    }
    
    printf("Hora en formato 12h: %d:%02d:%02d %s\n", hora12, m, s, periodo);
    
    return 0;
}
