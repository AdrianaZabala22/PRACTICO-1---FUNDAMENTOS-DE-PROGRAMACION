#include <stdio.h>
int main() {
    int totalSeg, horas, minutos, segundos;
    
    printf("Ingrese cantidad de segundos: ");
    scanf("%d", &totalSeg);
    
    horas = totalSeg / 3600;
    minutos = (totalSeg % 3600) / 60;
    segundos = totalSeg % 60;
    
    printf("%d Segundos = %d Horas, %d Minutos, %d Segundos\n", 
           totalSeg, horas, minutos, segundos);
    
    return 0;
}
