#include <stdio.h>
#include <math.h>
int main() {
    double a, b, c, discriminante;
    
    printf("Ecuacion: ax^2 + bx + c = 0\n");
    printf("a = "); scanf("%lf", &a);
    printf("b = "); scanf("%lf", &b);
    printf("c = "); scanf("%lf", &c);
    
    if (a == 0) {
        printf("No es ecuacion cuadratica (a no puede ser 0)\n");
        return 0;
    }
    
    discriminante = b*b - 4*a*c;
    
    if (discriminante > 0) {
        double x1 = (-b + sqrt(discriminante)) / (2*a);
        double x2 = (-b - sqrt(discriminante)) / (2*a);
        printf("Dos soluciones reales:\nx1 = %.4lf\nx2 = %.4lf\n", x1, x2);
    } else if (discriminante == 0) {
        double x = -b / (2*a);
        printf("Soluci√≥n doble: x = %.4lf\n", x);
    } else {
        printf("No hay soluciones reales (discriminante negativo)\n");
    }
    
    return 0;
}
