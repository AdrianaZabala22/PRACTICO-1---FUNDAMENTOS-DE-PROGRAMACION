#include <stdio.h>
int main() {
    int cantH, cantHQ, cantP, cantS;
    double total = 0;
    
    printf("Hamburguesas (3 Bs): ");
    scanf("%d", &cantH);
    printf("Hamburguesas con queso (5 Bs): ");
    scanf("%d", &cantHQ);
    printf("Papas fritas (2 Bs): ");
    scanf("%d", &cantP);
    printf("Soda (2.5 Bs): ");
    scanf("%d", &cantS);
    
    double subH  = cantH  * 3.0;
    double subHQ = cantHQ * 5.0;
    double subP  = cantP  * 2.0;
    double subS  = cantS  * 2.5;
    
    total = subH + subHQ + subP + subS;
    
    printf("\n--- RECIBO ---\n");
    printf("Hamburguesa        %3d x 3.00  = %6.2lf\n", cantH, subH);
    printf("Hamb. con queso    %3d x 5.00  = %6.2lf\n", cantHQ, subHQ);
    printf("Papas fritas       %3d x 2.00  = %6.2lf\n", cantP, subP);
    printf("Soda               %3d x 2.50  = %6.2lf\n", cantS, subS);
    printf("----------------------------------------\n");
    printf("TOTAL:                         %6.2lf Bs\n", total);
    
    return 0;
}
